@model UpdateWhoWeAreDetailDTO
@{
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Bilgileri Güncelleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="WhoWeAreDetailID" value=@ViewBag.whoWeAreDetailID />
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" value=@ViewBag.title />
                    <br />
                    <label>Alt Başlık</label>
                    <input type="text" asp-for="SubTitle" class="form-control" value="@ViewBag.subTitle" />
                    <br />
                    <label>Açıklama 1</label>
                    <input type="text" asp-for="Description1" class="form-control" value="@ViewBag.description1" />
                    <br />
                    <label>Açıklama 2</label>
                    <input type="text" asp-for="Description2" class="form-control" value="@ViewBag.description2" />
                    <br />
                    <button class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>